{
  "manifest_version": 2,
  "name": "webcompat.com reporter",
  "description": "Report website compatibility issues at webcompat.com",
  "version": "0.5",
  "applications": {
    "gecko": {
      "id": "jid1-mjpB54bRzP9Zxw@jetpack",
      "strict_min_version": "49.0a1"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://webcompat.com/"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "https://webcompat.com/",
    "<all_urls>"
  ],
  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon32.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    },
    "default_title": "Report Site Issue"
  }
}